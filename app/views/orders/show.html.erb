<h1 class="mb-4">Order Summary</h1>

<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4 class="mt-4">Taxes</h4>
<ul>
  <% if @order.gst.present? %>
    <li>GST: <%= number_to_currency(@order.gst) %></li>
  <% end %>
  <% if @order.pst.present? %>
    <li>PST: <%= number_to_currency(@order.pst) %></li>
  <% end %>
  <% if @order.hst.present? %>
    <li>HST: <%= number_to_currency(@order.hst) %></li>
  <% end %>
</ul>

<h3 class="mt-4">Total: <%= number_to_currency(@order.total_price) %></h3>

<%= link_to 'Back to Home', root_path, class: "btn btn-secondary mt-3" %>
