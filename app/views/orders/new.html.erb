<h2>Checkout</h2>

<%= form_with url: orders_path, method: :post, local: true do |f| %>
  <div class="mb-3">
    <%= label_tag :name, "Full Name" %>
    <%= text_field_tag :name, current_user&.username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :email, "Email" %>
    <%= email_field_tag :email, current_user&.email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :address, "Address" %>
    <%= text_field_tag :address, current_user&.address, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= label_tag :province_id, "Province" %>
    <%= select_tag :province_id, options_from_collection_for_select(Province.all, :id, :name, current_user&.province_id), prompt: "Select Province", class: "form-select", required: true %>
  </div>

  <%= submit_tag "Place Order", class: "btn btn-success" %>
<% end %>

