<!-- Breadcrumbs -->
<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
    <li class="breadcrumb-item"><%= link_to @product.category.name, category_path(@product.category) %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
  </ol>
</nav>

<!-- Product Layout -->
<div class="row">
  <div class="col-md-8">
    <h1><%= @product.name %></h1>
    <% if @product.image.attached? %>
      <%= image_tag url_for(@product.image), class: "img-fluid rounded shadow-sm mb-3", alt: @product.name %>
    <% end %>
    <p class="lead"><%= @product.description %></p>
    <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
    <p><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></p>
    <%= link_to 'Back to Products', root_path, class: "btn btn-outline-secondary mt-2" %>
  </div>

  <div class="col-md-4">
    <div class="p-3 bg-light rounded shadow-sm border">
      <h5 class="mb-2">üç≤ Mennonite Cooking Inspiration</h5>
      <p>Interested in cooking Mennonite classics yourself?</p>
      <a href="http://www.mennonitegirlscancook.ca/" class="btn btn-sm btn-primary" target="_blank" rel="noopener">Visit Mennonite Girls Can Cook</a>
    </div>
  </div>
</div>
